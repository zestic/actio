{
  "name": "actiophp/actio",
  "description": "Logging and reporting of activities and events",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "ext-pdo": "*",
    "fakerphp/faker": "^1.23",
    "pestphp/pest": "^2.24",
    "symfony/dotenv": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "Actio\\": "src/Actio"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
